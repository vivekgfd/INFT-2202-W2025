{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict":true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node"

  },
  "include": ["src/**/*"]
}